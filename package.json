{
	"name": "SelfMent",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite --port=8000 --host",
		"build": "tsc && vite build",
		"preview": "vite preview --port=8080 --host",
		"lint:commit": "commitlint -e $GIT_PARAMS",
		"lint:style": "stylelint '**/*.module.scss' '**/*.scss' '**/*.css'",
		"lint": "npm run lint:commit && npm run lint:style"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,json,md,html,css,scss,yml}": [
			"p lint",
			"prettier --write",
			"eslint --fix",
			"stylelint --fix",
			"git add"
		]
	},
	"dependencies": {
		"compose-function": "^3.0.3",
		"effector": "^22.8.0",
		"effector-factorio": "^1.1.0",
		"effector-react": "^22.5.1",
		"effector-storage": "^5.0.1",
		"framer-motion": "^10.11.2",
		"patronum": "^1.17.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^4.8.0",
		"react-router": "^6.10.0",
		"react-router-dom": "^6.10.0",
		"sass": "^1.61.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.5.1",
		"@commitlint/config-conventional": "^17.4.4",
		"@trivago/prettier-plugin-sort-imports": "^4.1.1",
		"@types/compose-function": "^0.0.30",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@types/react-router": "^5.1.20",
		"@types/react-router-dom": "^5.3.3",
		"@typescript-eslint/eslint-plugin": "^5.57.1",
		"@typescript-eslint/parser": "^5.57.1",
		"@vitejs/plugin-react-swc": "^3.0.0",
		"eslint": "^8.37.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-effector": "^0.10.5",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.1",
		"prettier": "^2.8.7",
		"stylelint": "^15.4.0",
		"stylelint-config-standard": "^32.0.0",
		"stylelint-scss": "^4.6.0",
		"typescript": "^4.9.3",
		"vite": "^4.2.0",
		"vite-plugin-checker": "^0.5.6",
		"vite-plugin-pwa": "^0.14.7",
		"vite-tsconfig-paths": "^4.0.8"
	}
}
